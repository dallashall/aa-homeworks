<section class="page"><div class="centered-box">
    <h1>New User</h1>

    <%= render "shared/errors" %>

    <form action="<%= users_url %>" method="post">
      <%= auth_token %>

      <label for="user_username">User Name</label>
      <input type="text"
             name="user[username]"
             id="user_username"
             value="<%= @user.username %>">
      <br>

      <label for="user_password">Password</label>
      <input type="password"
             name="user[password]"
             id="user_password"
             value="<%= @user.password %>">
      <br>
      <label for="email">Email</label>
      <input type="text" name="email" value="" id="email">

      <input type="submit">
    </form>
</div></section>
<% content_for :footer do %>
<p>
  You'll love it here. Unless you don't like cats. Hopefully the money makes up for that.
</p>
<% end %>
